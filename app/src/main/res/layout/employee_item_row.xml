<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:id="@+id/layoutItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/EmployeeAPIid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EmployeeAPIid"
                android:padding="5dp"
                android:textSize="15sp" />

            <TextView android:id="@+id/EmpMobNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EmpMobNo"
                android:padding="5dp"
                android:textSize="15sp" />

            <TextView android:id="@+id/EmpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Client : Pragati Solutions"
                android:textSize="15sp" />

            <TextView android:id="@+id/EmpEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Client Location : Dadar"
                android:textSize="15sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>